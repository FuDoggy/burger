<h1>Eat Da Burger!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <h3>{{burger_name}}</h3>
      <button class = "devour-button" data-id= {{id}}>Devour!</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burgerInput" name="name">
  </div>

  <button type="submit">Add Burgers</button>
</form>

<script>
  $("button").on("click", function() {
  const id = $(this).attr("id") 
  console.log(id)
  $.ajax({method: "PUT", url:"/api/burgers/" + id})
  })
</script>